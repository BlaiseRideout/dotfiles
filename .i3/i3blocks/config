# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[keyboard]
command=~/.i3/i3blocks/keyboard
interval=once
signal=1

[volume]
#label=ðŸ”Š
command=~/.i3/i3blocks/volume
interval=once
signal=10

[wireless]
label=ï‡«
instance=wlan0
command=~/.i3/i3blocks/network
interval=10

[battery]
label=âš¡
command=/usr/share/i3blocks/battery
